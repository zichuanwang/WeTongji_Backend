<h1>Listing channels</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Follow</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @channels.each do |channel| %>
  <tr>
    <td><%= channel.title %></td>
    <td><%= channel.follow %></td>
    <td><%= channel.description %></td>
    <td><%= link_to 'Show', channel %></td>
    <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
    <td><%= link_to 'Destroy', channel, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Show Activities', :controller => 'activities', :action => 'index', :channel_id => channel.id %></td>
  </tr>
<% end %>
</table>

