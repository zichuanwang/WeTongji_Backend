<% @title = "周边推荐" %>
<% @description = "校园周边推荐" %>
<% @controller = "资讯" %>
<% @action = "周边推荐" %>

<div class="portlet box light-grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-group"></i>活动列表</div>
    </div>
    <div class="portlet-body">
        <table class="table table-hover">
            <thead>
                <tr>
                  <th>标题</th>
                  <th>发布时间</th>
                  <th>阅读次数</th>
                  <th>账号</th>
                  <th>状态</th>
                  <th></th>
                </tr>
            </thead>
            <tbody>
              <% @arounds.each do |item| %>
                
                <tr>
                    <td><%= item.title %></td>
                    <td><%= item.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                    <td><%= item.read %></td>
                    <td><%= item.admin.display.blank? ? item.admin.email : item.admin.display %></td>
                    <td>
                        <% if item.is_pending %>
                            <span class="label label-info">待审核</span>
                        <% else %>
                            <span class="label label-success">已发布</span>
                        <% end %>
                    </td>
                    <td>
                      <%= link_to '详情', item %>
                      <%= link_to '编辑', edit_around_path(item) %>

                      <% if can? :top, Around %>
                      <%= link_to '置顶', arounds_top_path(:id => item.id), confirm: '确认置顶?', method: :post %>
                      <% end %>

                      <%= link_to '删除', item, confirm: '确认删除?', method: :delete %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @arounds %>
    </div>
    
</div>