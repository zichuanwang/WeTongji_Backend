<div class="box">
    <div class="title">
        <h5>所有意见</h5>
    </div>
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>编号</th>
                    <th>用户</th>
                    <th>问题</th>
                    <th>时间</th>
                    <th class="last">操作</th>
                </tr>
            </thead>
            <tbody>
                <% @stories.each do |story| %>
                <tr>
                    <td><%= story.id %></td>
                    <td><%= story.user.name %></td>
                    <td><%= story.title %></td>
                    <td><%= story.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                    <td class="last">
                        <%= link_to '详情', story %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @stories %>
    </div>
</div>