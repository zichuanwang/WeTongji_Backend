<%= form_for(@organizer, :html => {:multipart => true}) do |f| %>
  <% if @organizer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@organizer.errors.count, "error") %> prohibited this organizer from being saved:</h2>

      <ul>
      <% @organizer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    名称：<%= f.text_field :name, :class => "input_1" %>
  </div>
  <div class="field">
    说明：<%= f.text_field :description, :class => "input_1" %>
  </div>
  <div class="field">
    图标：<input type="file" name="organizer[icon]" />(图标会转换成200*200px分辨率大小.请使用正方形比率.)
  </div>
  <% if !Admin.find_by_role("OrganizerAdmin").nil? %>
  <div class="field">
    管理员：<%= f.select :admin_id, Admin.where("role = 'OrganizerAdmin'").collect{|c|[ c.email, c.id ]} %>
  </div>
  <% end %>
  <div class="btn_box">
    <%= f.submit "保存", :class => "btn_2" %>
  </div>
<% end %>