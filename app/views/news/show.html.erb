<div class="box">
    <div class="title">
        <h5>查看新闻</h5>
    </div>
    <div class="table">
        <table>
          <tr>
            <td>标题</td>
            <td class="last"><%= @news.title %></td>
          </tr>
          <tr>
            <td>发布时间</td>
            <td class="last"><%= @news.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
          </tr>
          <tr>
            <td>类别</td>
            <td class="last"><%= @news.category %></td>
          </tr>
          <tr>
            <td>阅读次数</td>
            <td class="last"><%= @news.read %></td>
          </tr>
          <tr>
            <td>内容</td>
            <td class="last"><%= @news.context %></td>
          </tr>
          <tr>
            <td>图片</td>
            <td class="last"><%= image_tag @news.image.url %></td>
          </tr>
        </table>
    </div>
</div>

