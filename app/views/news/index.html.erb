<% content_for :submenu do %>
  <%= render :partial => "layouts/submenu_news" %>
<% end %>

<div class="list_1">
  <div class="list_title">
    <div class="list_title_left">所有新闻</div>
    <div class="list_title_right"></div>
  </div>
  <div class="tab_content">
    <table width="100%" border="1" cellpadding="0" cellspacing="0" class="table1">
      <thead>
        <tr>
            <tr>
                <th>标题</th>
                <th>发布时间</th>
                <th>阅读次数</th>
                <th>操作</th>
            </tr>
        </tr>
      </thead>
      <tbody>
        <% @news.each do |item| %>
        <tr>
            <td><%= item.title %></td>
            <td><%= item.strftime("%Y/%m/%d") %></td>
            <td><%= item.read %></td>
            <td>
                <%= link_to '详情', item %>
                <%= link_to '编辑', edit_news_path(item) %>
                <%= link_to '删除', item, confirm: '确认删除?', method: :delete %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @news %>
  </div>
</div>