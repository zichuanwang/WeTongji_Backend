<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Context</th>
    <th>Read</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.context %></td>
    <td><%= news.read %></td>
    <td><%= news.category %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

