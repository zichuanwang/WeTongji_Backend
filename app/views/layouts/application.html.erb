<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>微同济服务器端管理系统</title>
		<%= csrf_meta_tags %>
    <!-- stylesheets -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/reset.css" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="/stylesheets/style_full.css" />
    <link id="color" rel="stylesheet" type="text/css" href="/stylesheets/colors/blue.css" />
    <!-- scripts (jquery) -->
    <script src="/javascripts/jquery-1.8.2.min.js" type="text/javascript"></script>
    <%= javascript_include_tag "application" %>
    <!--[if IE]><script language="javascript" type="text/javascript" src="/javascripts/excanvas.min.js"></script><![endif]-->
    <script src="/javascripts/jquery-ui-1.9.1.custom.min.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.ui.selectmenu.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.flot.min.js" type="text/javascript"></script>
    <script src="/javascripts/tiny_mce/jquery.tinymce.js" type="text/javascript"></script>
    <!-- scripts (custom) -->
    <script src="/javascripts/smooth.js" type="text/javascript"></script>
    <script src="/javascripts/smooth.menu.js" type="text/javascript"></script>
    <script src="/javascripts/smooth.table.js" type="text/javascript"></script>
    <script src="/javascripts/smooth.form.js" type="text/javascript"></script>
	</head>
	<body>
		<!-- header -->
    <div id="header">
      <!-- logo -->
      <div id="logo">
        <h1><a href="/dashboard" title="微同济管理后台"><img src="/images/logo.png" alt="微同济管理后台" /></a></h1>
      </div>
      <!-- end logo -->
      <!-- user -->
			<ul id="user">
				<li class="first"><%= link_to current_admin.email, admin_path(current_admin) %></li>
        <li><a href="mailto:wetongji2012@gmail.com?subject=微同济反馈">反馈</a></li>
				<li class="highlight last"><%= link_to "注销", destroy_admin_session_path, :method => :delete %></li>
			</ul>
      <!-- end user -->
      <div id="header-inner">
        <div id="home">
          <a href="/dashboard" title="Home"></a>
        </div>
        <!-- quick -->
        <ul id="quick">
          <%= render "layouts/menu" %>
        </ul>
        <!-- end quick -->
        <div class="corner tl"></div>
        <div class="corner tr"></div>
      </div>
    </div>
    <!-- end header -->
    <!-- content -->
    <div id="content">
        <%= yield %>
    </div>
    <!-- end content -->
    <!-- footer -->
    <div id="footer">
      <p>Copyright &copy; 2012-2013 WETONGJI. All Rights Reserved.</p>
    </div>
    <!-- end footert -->
	</body>
</html>