<div class="box">
    <div class="title">
        <h5>所有济人</h5>
    </div>
    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>姓名</th>
                    <th>职务</th>
                    <th>标题</th>
                    <th>阅读/喜欢/收藏</th>
                    <th class="last">操作</th>
                </tr>
            </thead>
            <tbody>
                <% @people.each do |person| %>
                <tr>
                    <td><%= person.name %></td>
                    <td><%= person.job_title %></td>
                    <td><%= person.title %></td>
                    <td>
                        <%= person.read %>/
                        <%= person.like %>/
                        <%= person.favorite %>
                    </td>
                    <td class="last">
                        <%= link_to '详情', person %>
                        <%= link_to '编辑', edit_person_path(person) %>
                        <%= link_to '删除', person, confirm: '确认删除?', method: :delete %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @people %>
    </div>
</div>