<%= form_for(@person, :html => { :multipart => true }) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form">
    <div class="fields">
      <div class="field field-first">
        <div class="label">
          <label>姓名</label>
        </div>
        <div class="input">
          <%= f.text_field :name, { :class => "small" } %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>编号</label>
        </div>
        <div class="select">
          <%= f.select :no, [Time.now.strftime("%Y%U").to_i + 1, Time.now.strftime("%Y%U").to_i + 2, Time.now.strftime("%Y%U").to_i + 3]  %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>职务</label>
        </div>
        <div class="input">
          <%= f.text_field :job_title, { :class => "small" } %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>声音</label>
        </div>
        <div class="input">
          <%= f.text_field :words, { :class => "large" } %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>标题</label>
        </div>
        <div class="input">
          <%= f.text_field :title, { :class => "large" } %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>照片(300K以内,jpeg格式)</label>
        </div>
        <div class="input input-file">
          <%= f.file_field :avatar, { :size => "40" } %>
        </div>
      </div>
      <% 1.upto(3).each do |i| %>
      <div class="field">
        <div class="label">
          <label>图片标题</label>
        </div>
        <div class="input">
          <input type="text" name="images[][title]" class="small" />
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>图片(300K以内,jpeg格式)</label>
        </div>
        <div class="input input-file">
          <input type="file" name="images[][file]" />
        </div>
      </div>
      <% end %>
      <% unless @person.person_images.empty? %>
      <div class="field">
        <div class="label label-checkbox">
          <label>已上传图片</label>
        </div>
        <div class="checkboxes">
          <% @person.person_images.each do |image| %>
          <%= link_to (image_tag image.file.url(:thumb)), image.file.url, :target => "_blank"  %>
          <input type="checkbox" name="delete_images[]" value="<%= image.id %>" />
          <label>删除</label>
          <% end %>
        </div>
      </div>
      <% end %>
      <div class="field">
        <div class="label label-textarea">
          <label>内容</label>
        </div>
        <div class="textarea">
          <%= f.text_area :description, :rows => 8, :cols => 50 %>
        </div>
      </div>
      <div class="buttons">
        <input type="submit" name="submit" value="保存" />
      </div>
    </div>
  </div>
<% end %>