<% @title = "广告" %>
<% @description = "置顶广告" %>
<% @controller = "广告" %>
<% @action = "列表" %>

<div class="portlet box light-grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-group"></i>所有广告</div>
    </div>
    <div class="portlet-body">
        <table class="table table-hover">
            <thead>
                <tr>
                  <th>标题</th>
                  <th>发布时间</th>
                  <th>阅读次数</th>
                  <th></th>
                </tr>
            </thead>
            <tbody>
              <% @advertisements.each do |item| %>
              <tr>
                  <td><%= item.title %></td>
                  <td><%= item.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                  <td><%= item.read %></td>
                  <td class="last">
                      <%= link_to '详情', item %>
                      <%= link_to '编辑', edit_advertisement_path(item) %>
                      <%= link_to '删除', item, confirm: '确认删除?', method: :delete %>
                  </td>
              </tr>
              <% end %>
            </tbody>
        </table>
        <%= paginate @advertisements %>
    </div>
    
</div>