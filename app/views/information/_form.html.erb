<%= form_for(@information) do |f| %>
  <% if @information.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@information.errors.count, "error") %> prohibited this information from being saved:</h2>

      <ul>
      <% @information.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form">
    <div class="fields">
      <div class="field field-first">
        <div class="label">
          <label>标题</label>
        </div>
        <div class="input">
          <%= f.text_field :title, { :class => "small" } %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>类别</label>
        </div>
        <div class="select">
          <%= f.select :category,  ["校园新闻", "团体通告", "校务信息", "周边推荐"] %>
        </div>
      </div>
      <div class="field">
        <div class="label">
          <label>题图</label>
        </div>
        <div class="input input-file">
          <%= f.file_field :image, { :size => "40" } %>
        </div>
      </div>
      <div class="field">
        <div class="label label-textarea">
          <label>内容</label>
        </div>
        <div class="textarea">
          <%= f.text_area :context, :rows => 8, :cols => 50 %>
        </div>
      </div>
      <div class="buttons">
        <input type="submit" name="submit" value="保存" />
      </div>
    </div>
  </div>
<% end %>