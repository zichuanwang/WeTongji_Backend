<% @title = "活动" %>
<% @description = "校园活动或者校园周边活动" %>
<% @controller = "活动" %>
<% @action = "列表" %>

<div class="portlet box light-grey">
    <div class="portlet-title">
        <div class="caption"><i class="icon-group"></i>活动列表</div>
    </div>
    <div class="portlet-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>账号</th>
                    <th>起止时间</th>
                    <th>标题</th>
                    <th>关注度</th>
                    <th>+1</th>
                    <th>参与度</th>
                    <th>状态<th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @activities.each do |activity| %>
                <tr>
                    <td>
                        <%= activity.admin.display.blank? ? activity.admin.email : activity.admin.display %>
                    </td>
                    <td><%= activity.begin.strftime("%Y/%m/%d %H:%M:%S") %>~<%= activity.end.strftime("%H:%M:%S") %></td>
                    <td><%= activity.title %></td>
                    <td><%= activity.favorite %></td>
                    <td><%= activity.like %></td>
                    <td><%= activity.schedule %></td>
                    <td>
                        <% if activity.is_pending %>
                            <span class="label label-info">待审核</span>
                        <% else %>
                            <span class="label label-success">已发布</span>
                        <% end %>
                    </td>
                    <td>
                        <%= link_to '详情', activity %>
                        <% if can? :edit, activity %>
                        <%= link_to '编辑', edit_activity_path(activity) %>
                        <% end %>
                        <% if can? :top, Activity %>
                        <%= link_to '置顶', activities_top_path(:id => activity.id), confirm: '确认置顶?', method: :post %>
                        <% end %>
                        <% if can? :delete, activity %>
                        <%= link_to '删除', activity, confirm: '确认删除?', method: :delete %>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        <%= paginate @activities %>
    </div>
    
</div>
