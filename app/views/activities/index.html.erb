<div class="list_1">
  <div class="list_title">
    <div class="list_title_left">活动列表 <%= link_to '[创建]', new_activity_path, { :class => 'screenshot' } %></div>
    <div class="list_title_right"></div>
  </div>
  <div class="tab_content">
    <table width="100%" border="1" cellpadding="0" cellspacing="0" class="table1">
      <thead>
        <tr>
            <tr>
                <th>序号</th>
                <th>开始</th>
                <th>结束</th>
                <th>标题</th>
                <th>位置</th>
                <th>Follow</th>
                <th>Like</th>
                <th>Hot</th>
                <th>组织者</th>
                <th>频道</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </tr>
      </thead>
      <tbody>
        <% @activities.each do |activity| %>
        <tr>
            <td><%= activity.id %></td>
            <td><%= activity.begin %></td>
            <td><%= activity.end %></td>
            <td><%= activity.title %></td>
            <td><%= activity.location %></td>
            <td><%= activity.follow %></td>
            <td><%= activity.like %></td>
            <td><%= activity.hot %></td>
            <td><%= activity.organizer.name %></td>
            <td><%= activity.channel.title %></td>
            <td><%= activity.status %></td>
            <td>
                <%= link_to '详情', activity %>
                <%= link_to '编辑', edit_activity_path(activity) %>
                <%= link_to '删除', activity, confirm: '确认删除?', method: :delete %>
            </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>